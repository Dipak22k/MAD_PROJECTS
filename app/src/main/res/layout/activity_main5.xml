<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:background="@drawable/act"

    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practical.4 : Simple Calculator"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editTextDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:inputType="number"
        android:textSize="24sp"
        android:enabled="false"
        android:background="#EEEEEE"
        android:textColor="@color/black"
        android:padding="16dp"
        android:layout_marginTop="100dp"
        android:hint="Calculator Display" />

    <!-- Buttons for calculator operations -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingTop="20dp"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:layout_below="@id/editTextDisplay"
        >

        <!-- Number buttons -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/black"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="*"
            android:background="@drawable/circle_button"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <!-- Row 4 -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="C"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp" />
        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="="
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="/"
            android:background="@drawable/circle_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="8dp"
            />

    </GridLayout>
    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/black"
        android:text="BACK TO MAD_PROJECTS"
        android:layout_below="@+id/grid" />

</RelativeLayout>